<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
            <stroke android:width="1dp" android:color="@color/accent" />
            <solid android:color="@color/browser_actions_bg_grey" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
            <stroke android:width="1dp" android:color="@color/separatorColor" />
            <corners android:radius="20dp" />
            <solid android:color="@color/browser_actions_bg_grey" />
        </shape>
    </item>
</selector>